{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"alwaysStrict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"noEmit": true,
		"lib": [
			"ES6",
			"DOM"
		],
		"resolveJsonModule": true,
		"strict": true
	},
	"include": [
		"src/**/*.{cjs}"
	],
}
