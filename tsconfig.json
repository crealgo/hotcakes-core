{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"alwaysStrict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"noEmit": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"resolveJsonModule": true,
		"strict": true
	},
	"include": [
		"src/**/*.cjs",
		"src/**/*.ts"
	],
}
